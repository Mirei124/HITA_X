<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bottom_sheet_rounded_background"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:gravity="start"
            android:text="@string/ade_title"
            android:textColor="?attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                android:paddingEnd="24dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/pick_timetable"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="?attr/backgroundColorBottomAsTint"
                    android:backgroundTintMode="src_atop"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:visibility="visible"
                    app:cardBackgroundColor="?attr/colorControlNormal"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/pick_timetable_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:padding="2dp"
                            android:tintMode="src_in"
                            app:srcCompat="@drawable/ic_timetable"
                            app:tint="?attr/colorControlNormal" />

                        <TextView
                            android:id="@+id/pick_timetable_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:fontFamily="sans-serif-black"
                            android:maxEms="16"
                            android:singleLine="true"
                            android:text="@string/ade_pick_timetable"
                            android:textColor="?attr/colorControlNormal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                android:paddingEnd="24dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/pick_time"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="?attr/backgroundColorBottomAsTint"
                    android:backgroundTintMode="src_atop"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:cardBackgroundColor="?attr/colorControlNormal"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pick_time_icon"
                            android:layout_width="0dp"
                            android:layout_height="18dp"
                            android:layout_weight="1"
                            android:tintMode="src_in"
                            app:srcCompat="@drawable/ic_baseline_access_time_24"
                            app:tint="?attr/colorControlNormal" />

                        <TextView
                            android:id="@+id/time_show"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:fontFamily="sans-serif-black"
                            android:maxEms="16"
                            android:singleLine="true"
                            android:text="@string/ade_pick_time"
                            android:textColor="?attr/colorControlNormal" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pick_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="?attr/backgroundColorBottomAsTint"
                    android:backgroundTintMode="src_atop"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:visibility="visible"
                    app:cardBackgroundColor="?attr/colorControlNormal"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/pick_subject_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:padding="2dp"
                            android:tintMode="src_in"
                            app:srcCompat="@drawable/ic_baseline_timetable_24"
                            app:tint="?attr/colorControlNormal" />

                        <TextView
                            android:id="@+id/pick_subject_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:fontFamily="sans-serif-black"
                            android:maxEms="16"
                            android:singleLine="true"
                            android:text="@string/ade_pick_subject"
                            android:textColor="?attr/textColorSecondary" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                android:paddingEnd="24dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/pick_location"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="?attr/backgroundColorBottomAsTint"
                    android:backgroundTintMode="src_atop"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:visibility="visible"
                    app:cardBackgroundColor="?attr/colorControlNormal"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pick_location_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:tintMode="src_in"
                            app:srcCompat="@drawable/ic_baseline_location_24"
                            app:tint="?attr/colorControlNormal" />

                        <TextView
                            android:id="@+id/pick_location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="sans-serif-black"
                            android:maxEms="16"
                            android:singleLine="true"
                            android:text="@string/ade_pick_location"
                            android:textColor="?attr/textColorSecondary" />

                        <ImageView
                            android:id="@+id/pick_location_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:scaleType="centerInside"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_baseline_cancel_24"
                            app:theme="@style/button_ripple_accent"
                            app:tint="?attr/colorAccent" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pick_teacher"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="?attr/backgroundColorBottomAsTint"
                    android:backgroundTintMode="src_atop"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:visibility="visible"
                    app:cardBackgroundColor="?attr/colorControlNormal"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/pick_teacher_icon"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:tintMode="src_in"
                            app:srcCompat="@drawable/ic_teacher"
                            app:tint="?attr/colorControlNormal" />

                        <TextView
                            android:id="@+id/pick_teacher_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="sans-serif-black"
                            android:maxEms="16"
                            android:singleLine="true"
                            android:text="@string/ade_pick_teacher"
                            android:textColor="?attr/colorControlNormal" />

                        <ImageView
                            android:id="@+id/pick_teacher_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:scaleType="centerInside"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_baseline_cancel_24"
                            app:theme="@style/button_ripple_accent"
                            app:tint="?attr/colorAccent" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/ade_namelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <AutoCompleteTextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="@string/ade_namehint"
                android:inputType="text"
                android:maxLines="1"
                android:paddingTop="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                android:singleLine="true"
                android:textColor="?attr/textColorPrimary"
                android:textColorHint="?attr/textColorSecondary"
                android:textSize="18sp"
                tools:ignore="NestedWeights,RtlSymmetry" />

        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ade_bt_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="?attr/colorAccent"
        app:layout_anchorGravity="end|top"
        app:srcCompat="@drawable/ic_done_white_48dp"
        app:tint="@color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        app:backgroundTint="?attr/textColorSecondary"
        app:layout_anchorGravity="end|top"
        app:srcCompat="@drawable/ic_baseline_close_24"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>