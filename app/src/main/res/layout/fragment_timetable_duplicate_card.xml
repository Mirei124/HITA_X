<?xml version="1.0" encoding="utf-8"?><merge xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent">    <LinearLayout        android:id="@+id/card"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginLeft="1dp"        android:layout_marginTop="1dp"        android:layout_marginRight="1dp"        android:layout_marginBottom="2dp"        android:background="@drawable/spec_timetable_card_background_duplicate"        android:backgroundTint="#ff0000"        android:clickable="true"        android:elevation="0dp"        android:foreground="?attr/selectableItemBackground"        android:orientation="vertical">        <LinearLayout            android:id="@+id/card1"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_marginBottom="6dp"            android:layout_weight="1"            android:background="@drawable/spec_timetable_card_background_duplicate"            android:clickable="false"            android:elevation="0dp"            android:orientation="vertical">            <ImageView                android:id="@+id/icon"                android:layout_width="match_parent"                android:layout_height="24dp"                android:layout_gravity="center"                android:layout_marginLeft="3dp"                android:layout_marginTop="-4dp"                android:layout_marginRight="3dp"                android:layout_marginBottom="-8dp"                app:srcCompat="@drawable/ic_baseline_more_horiz_24"                app:tint="@color/white" />            <TextView                android:id="@+id/title"                android:layout_width="match_parent"                android:layout_height="0dp"                android:layout_gravity="center"                android:layout_marginLeft="5dp"                android:layout_marginRight="5dp"                android:layout_weight="1"                android:ellipsize="end"                android:gravity="center|top"                android:maxLines="4"                android:text="高级程序语言设计"                android:textColor="@color/white"                android:textSize="12sp" />            <ImageView                android:layout_width="20dp"                android:layout_height="20dp"                android:layout_gravity="bottom|center|end"                android:layout_marginTop="-5dp"                android:layout_marginEnd="-3dp"                android:layout_marginBottom="-3dp"                android:rotation="-45"                android:scaleType="centerInside"                app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"                app:tint="@color/white" />        </LinearLayout>    </LinearLayout></merge>